<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.servicebuddy.Activities.MenuActivityFragment"
    >


    <Button
        android:id="@+id/machineListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machines list"
        android:layout_marginLeft="142dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="129dp" />

    <Button
        android:id="@+id/userListBtn"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="23dp"
        android:text="Users list"
        app:layout_constraintTop_toBottomOf="@+id/machineListBtn"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/machineListBtn" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
